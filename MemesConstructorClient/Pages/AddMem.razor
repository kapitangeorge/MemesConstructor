@page "/AddMem"
@inherits AddMemBase
<div class="row">
    <div class="col">
        <EditForm Model="@mem" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator/>
            

            <div class="form-group">
                <label>Название</label>
                <InputText  @bind-Value="mem.Name" class="form-control"/>
                <ValidationMessage For="@(()=> mem.Name)"/>
            </div>

            <div class="form-group">
                <label>Описание</label>
                <InputTextArea  @bind-Value="mem.Description" class="form-control"/>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success">Создать</button>
            </div>

        </EditForm>
    </div>
</div>


<div class="col-sm-10">
    <UploadImage Folder="Memes" UploadImageCallback="@AddImageUrl"></UploadImage>
</div>



