@page "/MemProfile/{id}"
@inherits MemProfileBase

<a href="/" class="btn btn-outline-info">
    <span class="oi oi-arrow-circle-left"></span>
</a>
@if (Mem == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="row justify-content-center mb-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Mem.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@Mem.ImagePath" />

                    <div>
                        <button @onclick="MinusRating" class="btn btn-outline-danger">
                            <span class="oi oi-caret-bottom"></span>
                        </button>
                        @if (Mem.Rating > 0)
                        {
                            <span style="color:forestgreen">@Mem.Rating</span>
                        }
                        else if (Mem.Rating < 0)
                        {
                            <span style="color:red">@Mem.Rating</span>
                        }
                        else
                        {
                            <span>@Mem.Rating</span>
                        }
                        <button @onclick="PlusRating" class="btn btn-outline-success">
                            <span class="oi oi-caret-top">
                            </span>
                        </button>
                    </div>
                    <p>
                        @Mem.Description
                    </p>
                </div>

            </div>
        </div>
    </div>
    <br />

    <Comments Id="@int.Parse(Id)"></Comments>
}