@page "/MemProfile/{id}"
@inherits MemProfileBase

<a href="/" class="btn btn-outline-info" >
   <span class="oi oi-arrow-circle-left"></span>
</a>
@if (Mem == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="row justify-content-center mb-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Mem.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@Mem.ImagePath" />

                    <h4>@Mem.Rating</h4>
                    <p>
                        @Mem.Description
                    </p>
                </div>
                
            </div>
        </div>
    </div><br />

    <Comments Id="@int.Parse(Id)"></Comments>
}